---
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border py-12 md:py-16">
  <div class="container">
    <!-- Top row -->
    <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-8 mb-8">
      <div>
        <div class="flex items-center gap-1">
          <span class="font-serif text-lg font-semibold text-primary">
            Epic Itineraries
          </span>
          <span class="text-brand-coral text-lg font-bold">.</span>
        </div>
        <p class="mt-2 text-sm text-muted-foreground max-w-xs">
          Collect inspiration. Generate adventure.
        </p>
      </div>

      <nav class="flex flex-wrap items-center gap-6 text-sm">
        <a
          href="/privacy"
          class="text-muted-foreground transition-colors hover:text-foreground"
        >
          Privacy Policy
        </a>
        <a
          href="/terms"
          class="text-muted-foreground transition-colors hover:text-foreground"
        >
          Terms of Service
        </a>
        <a
          href="mailto:hello@epic-itineraries.com"
          class="text-muted-foreground transition-colors hover:text-foreground"
        >
          Contact
        </a>
      </nav>
    </div>

    <!-- Bottom row -->
    <div class="border-t border-border pt-8">
      <p class="text-xs text-muted-foreground">
        &copy; {currentYear} Epic Itineraries
      </p>
    </div>
  </div>
</footer>
