---
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border py-12 md:py-16">
  <div class="container">
    <!-- Top row -->
    <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-8 mb-8">
      <div>
        <div class="flex items-center gap-1">
          <span class="font-serif text-lg font-semibold text-primary">
            Epic Itineraries
          </span>
          <span class="text-brand-coral text-lg font-bold">.</span>
        </div>
        <p class="mt-2 text-sm text-muted-foreground max-w-xs">
          Collect inspiration. Generate adventure.
        </p>
      </div>

      <!-- Navigation columns -->
      <div class="flex flex-wrap gap-12 text-sm">
        <div>
          <p class="font-semibold text-foreground mb-3">Product</p>
          <ul class="space-y-2">
            <li>
              <a href="/how-it-works" class="text-muted-foreground transition-colors hover:text-foreground">
                How It Works
              </a>
            </li>
            <li>
              <a href="/get" class="text-muted-foreground transition-colors hover:text-foreground">
                Get
              </a>
            </li>
            <li>
              <a href="/faq" class="text-muted-foreground transition-colors hover:text-foreground">
                FAQ
              </a>
            </li>
          </ul>
        </div>
        <div>
          <p class="font-semibold text-foreground mb-3">Content</p>
          <ul class="space-y-2">
            <li>
              <a href="/blog" class="text-muted-foreground transition-colors hover:text-foreground">
                Blog
              </a>
            </li>
          </ul>
        </div>
        <div>
          <p class="font-semibold text-foreground mb-3">Company</p>
          <ul class="space-y-2">
            <li>
              <a href="/about" class="text-muted-foreground transition-colors hover:text-foreground">
                About
              </a>
            </li>
            <li>
              <a href="mailto:hello@epic-itineraries.com" class="text-muted-foreground transition-colors hover:text-foreground">
                Contact
              </a>
            </li>
          </ul>
        </div>
        <div>
          <p class="font-semibold text-foreground mb-3">Legal</p>
          <ul class="space-y-2">
            <li>
              <a href="/privacy" class="text-muted-foreground transition-colors hover:text-foreground">
                Privacy Policy
              </a>
            </li>
            <li>
              <a href="/terms" class="text-muted-foreground transition-colors hover:text-foreground">
                Terms of Service
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Bottom row -->
    <div class="border-t border-border pt-8">
      <p class="text-xs text-muted-foreground">
        &copy; {currentYear} Epic Itineraries
      </p>
    </div>
  </div>
</footer>
